<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/network_style.item_layout"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wifi_devices_title"
            style="@style/network_style.title" />

        <TextView
            android:id="@+id/item_wifi_devices_summary"
            style="@style/network_style.summary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_wifi_devices_iamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space10"
        android:layout_marginRight="@dimen/view_space10" />

</LinearLayout>